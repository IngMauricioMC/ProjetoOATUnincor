create database OATUnincor;
use OATUnincor;

CREATE TABLE curso(
 id int AUTO_INCREMENT,
 nome varchar(30) NOT NULL
);

CREATE TABLE periodo(
 id int AUTO_INCREMENT,
 nome varchar(30) NOT NULL
);

create table aluno(
  nome varchar(30) NOT NULL,
  sobrenome varchar(30) NOT NULL,
  email varchar(80) NOT NULL,
  pkCurso int NOT NULL,
  pkPeriodo int NOT NULL
);


ALTER TABLE curso ADD CONSTRAINT pk_Curso PRIMARY KEY(id);
ALTER TABLE periodo ADD CONSTRAINT pk_Periodo PRIMARY KEY(id);
ALTER TABLE aluno ADD CONSTRAINT pk_Aluno_Curso FOREIGN KEY (pkCurso) references curso(id);
ALTER TABLE aluno ADD CONSTRAINT pk_Aluno_Periodo FOREIGN KEY (pkPeriodo) references periodo(id);

CREATE TABLE experiencias(
 author varchar(50) NOT NULL,
 exper varchar(300) NOT NULL,
 ano year,
 foto
);
